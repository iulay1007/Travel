<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBF4FB"

    tools:context=".ui.ativity.ShowSecondListItemActivity">
<TextView
    android:padding="5dp"
    android:textColor="#3F51B5"
android:background="@drawable/gra_item_bg"
    android:id="@+id/title_second_act"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="title"
    android:layout_marginTop="30dp"
    android:textSize="25sp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    />
    <androidx.cardview.widget.CardView
        android:id="@+id/card_second_act"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/title_second_act"
        app:cardCornerRadius="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <ImageView

        android:id="@+id/img_second_act"
       android:scaleType="centerCrop"
        android:layout_width="250dp"
        android:layout_height="200dp"
        />
    </androidx.cardview.widget.CardView>
    <TextView
        android:padding="3dp"
        android:background="@drawable/gra_btn_bg"
        app:layout_constraintTop_toBottomOf="@+id/card_second_act"
        android:layout_marginTop="10dp"
        android:textSize="20sp"
        android:text="province"
        android:textColor="#ffffff"

        android:id="@+id/province_tv_second_act"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginRight="50dp"
        />
    <TextView
        android:padding="3dp"
     app:layout_constraintTop_toTopOf="@+id/province_tv_second_act"
        app:layout_constraintBottom_toBottomOf="@+id/province_tv_second_act"
        android:textSize="20sp"
        android:layout_marginLeft="20dp"
        android:textColor="#ffffff"

        android:background="@drawable/gra_btn_bg"

        android:text="city"
        android:id="@+id/city_tv_second_act"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/province_tv_second_act"
        />
    <TextView
        android:padding="3dp"
        android:id="@+id/address_tv_second_act"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="address"
        android:background="@drawable/gra_btn_bg"
        android:textColor="#ffffff"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/province_tv_second_act"
        />
    <ScrollView
        android:background="@drawable/gra_item_bg"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/address_tv_second_act"
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:layout_height="350dp">
    <TextView
        android:paddingBottom="10dp"
        android:id="@+id/info_second_act"
        android:gravity="center"
        android:singleLine="false"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"

        android:layout_marginTop="10dp"
        android:text="info"
        />
</ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>